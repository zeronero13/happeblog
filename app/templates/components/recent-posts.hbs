<div class="well">
<h4>Recent posts</h4>
<ul class="list-unstyled">
    {{#each model.posts as |post|}}
        <li>
            {{#link-to "posts.post" post}}
                {{post.title}}
            <span class="muted">
                by (post.author.name)
            </span>
            {{/link-to}}
        </li>
    {{/each}}
</ul>
</div>
{{yield}}
